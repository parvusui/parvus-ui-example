{
  "name": "javascript-library-starter",
  "version": "1.0.0",
  "scripts": {
    "start":
      "webpack-dev-server --hot --inline --progress --colors --mode development --config webpack.config.js",
    "test": "jest",
    "build":
      "rm -rf dist && mkdir dist && webpack --progress --profile --colors --mode production --config webpack.config.js",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,json}": ["prettier-eslint --write", "git add"]
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "./node_modules/babel-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/))\\.js?$",
    "moduleFileExtensions": ["js", "json"]
  },
  "dependencies": {
    "parvus-ui": "^0.3.11",
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-eslint": "8.2.3",
    "babel-jest": "22.4.4",
    "babel-loader": "7.1.4",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "cross-env": "5.1.5",
    "enzyme": "3.3.0",
    "eslint": "4.19.1",
    "eslint-config-unobtrusive": "1.2.2",
    "eslint-loader": "2.0.0",
    "eslint-plugin-import": "2.10.0",
    "eslint-plugin-react": "^7.11.1",
    "extract-text-webpack-plugin": "3.0.2",
    "html-webpack-plugin": "3.2.0",
    "husky": "0.14.3",
    "jest": "22.4.4",
    "lint-staged": "7.1.1",
    "prettier": "1.12.1",
    "prettier-eslint": "8.8.1",
    "prettier-eslint-cli": "4.7.1",
    "style-loader": "0.21.0",
    "webpack": "4.8.3",
    "webpack-cli": "2.1.3",
    "webpack-dev-server": "3.1.4"
  }
}
